<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="72dp"
        android:text="用户名:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username1"
        android:layout_alignStart="@+id/tv_username1"
        android:layout_alignLeft="@+id/tv_username1"
        android:layout_marginTop="72dp"
        android:text="密码:"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cb_isDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_passwd"
        android:layout_alignStart="@+id/et_passwd"
        android:layout_alignLeft="@+id/et_passwd"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="54dp"
        android:text="是否司机" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_isDriver"
        android:layout_alignStart="@+id/tv_passwd"
        android:layout_alignLeft="@+id/tv_passwd"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="55dp"
        android:text="登陆" />

    <Button
        android:id="@+id/bt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cb_isDriver"
        android:layout_alignLeft="@+id/cb_isDriver"
        android:layout_alignBottom="@+id/bt_login"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:text="注册" />

    <EditText
        android:id="@+id/et_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_passwd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <AutoCompleteTextView
        android:id="@+id/attv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_username1"
        android:layout_alignEnd="@+id/cb_isDriver"
        android:layout_alignRight="@+id/cb_isDriver"
        android:layout_alignBottom="@+id/tv_username1"
        android:hint="请输入用户名"
        android:popupBackground="@color/colorPrimary"
        android:textSize="18sp" />
</RelativeLayout>